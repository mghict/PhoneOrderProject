@model WebSite.JourChin.Models.Order.GetOrderItems
@{
    ViewData["Title"] = "RejectItem";
    Layout = "~/Views/Shared/_Layout.cshtml";
    long itemId;
    try
    {
        itemId = Convert.ToInt64(ViewBag.ItemIdOrderReserve);
    }
    catch
    {
        itemId = 0;
    }
}
<input type="hidden" id="txtItemIdReserve" value="@itemId"/>
<input type="hidden" id="txtItemOrderCode" value="@ViewBag.OrderCode" />

<div class="container">
    <div class="cart-wrapper-area py-3">
        <div class="cta-area">
            @if (Model != null && Model.Id > 0)
            {
                var order = Model;
                <div class="cta-text p-4 p-lg-5 d-flex align-items-center ">
                    <h6 class="text-white pr-3 mb-0 border-right">
                        سفارش:<br />
                        @ViewBag.OrderCode
                    </h6>
                    <div class="pl-3 mb-0">
                        <p class="pl-1 mb-0">
                            نام کالا: @(order.DisplayName) - بارکد کالا: @(order.ProductCode)
                        </p>
                        <p class="pl-1 mb-0">
                            برند کالا: @(order.BrandName)
                        </p>
                        <p class="pl-1 mb-0">
                            تعداد: @(order.Quantity.ToString("#,##0"))
                        </p>
                    </div>

                </div>
                @*<button class="btn btn-success m-2 ">تایید عدم موجودی و برگشت</button>*@
                @*<button class="btn btn-danger m-2 " onclick="fillReversProductList('@itemId')">لیست جایگزین</button>*@

                <br />
                <div class="card ">
                    <span class="text-danger text-sm pl-3"> ثبت جایگزین </span>
                    <div class="card-body">
                        <div class="input-group">
                            <input type="text" class="form-control search-text" placeholder="جستجو براساس بارکد کالا" name="searchkey" id="searchkey">
                            <div class="input-group-append">
                                <button class="btn btn-dark" type="button" onclick="findBarcode()">
                                    <i class="d-inline lni lni-search"></i>
                                </button>
                            </div>
                        </div>
                        <br />
                        <div class="col-12" id="findResult">

                        </div>
                    </div>
                </div>
                <br />
                <div class="card" >
                    <div class="card-body" id="slideProductListContent">

                    </div>
                </div>

            }
        </div>
        <br />

    </div>
</div>

@section Scripts
{
    <script src="~/js/order/rejectitem.js"></script>
}
