
@{
    ViewData["Title"] = "ورود به جورچین";
    Layout = "_LayoutLogin";
}


<div class="container">
    <div class="row justify-content-center">
        <div class="col-12 col-sm-9 col-md-7 col-lg-6 col-xl-5">
            @*<img class="big-logo" src="img/core-img/logo-white.png" alt="">*@
            <img class="big-logo" src="~/img/brand/logo-white.png" alt="OK Logo">
            <!-- Register Form-->
            <div class="register-form mt-5 px-4">
                @*<form action="/Home/Index" method="get">*@
                    <div class="form-group text-left mb-4">
                        <span>نام کاربری</span>
                        <label for="username"><i class="lni lni-user text-light"></i></label>
                        <input class="form-control" id="txtUserName" type="text" placeholder="شماره تلفن همراه">
                    </div>
                    <div class="form-group text-left mb-4">
                        <span>کلمه عبور</span>
                        <label for="password"><i class="lni lni-lock text-light"></i></label>
                        <input class="form-control" id="txtPassword" type="password" placeholder="********************">
                    </div>
                    <a class="btn btn-success btn-lg w-100" href="#" onclick="login()" id="btnLogin">ورود</a>
                @*</form>*@
            </div>
        </div>
    </div>
</div>

@section Scripts
{
    <script src="~/js/home/login.js"></script>
}



