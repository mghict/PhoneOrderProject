@model List<Models.CustomerPhone.CustomerPhoneModel>
@{
    Layout = null;
}

<div class="card">
    <div class="card-header">
        لیست تلفن های ثبت شده
    </div>
    <div class="card-body">
        @if (Model != null && Model.Count > 0)
        {
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>نوع تلفن</th>
                            <th>شماره تلفن</th>
                        </tr>
                    </thead>
                    <tbody>
                        @for (int i = 0; i < Model.Count; i++)
                        {
                            var item = Model[i];
                            <tr>
                                <td>@(i+1)</td>
                                <td>@item.PhoneTypeStr</td>
                                <td>@item.PhoneValue</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>
