@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, viewport-fit=cover, shrink-to-fit=no">
    <meta name="description" content="سوها- Multipurpose Ecommerce Mobile HTML Template">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="theme-color" content="#100DD1">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-status-bar-style" content="black">
    <!-- The above tags *must* come first in the head, any other head content must come *after* these tags-->
    <!-- Title-->
    <title>فروشگاه سوها</title>
    <!-- Favicon-->
    <link rel="icon" href="~/device_template/img/icons/icon-72x72.png">
    <!-- Apple Touch Icon-->
    <link rel="apple-touch-icon" href="~/device_template/img/icons/icon-96x96.png">
    <link rel="apple-touch-icon" sizes="152x152" href="~/device_template/img/icons/icon-152x152.png">
    <link rel="apple-touch-icon" sizes="167x167" href="~/device_template/img/icons/icon-167x167.png">
    <link rel="apple-touch-icon" sizes="180x180" href="~/device_template/img/icons/icon-180x180.png">
    <!-- Stylesheet-->
    <link rel="stylesheet" href="~/device_template/style.css">
    <!-- Web App Manifest-->
    <link rel="manifest" href="~/device_template/manifest.json">
</head>
<body>
    <!-- Preloader-->
    <div class="preloader" id="preloader">
        <div class="spinner-grow text-secondary" role="status">
            <div class="sr-only">بارگذاری...</div>
        </div>
    </div>
    <!-- Login Wrapper Area-->
    <div class="login-wrapper d-flex align-items-center justify-content-center text-center">
        <!-- Background Shape-->
        <div class="background-shape"></div>
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-12 col-sm-9 col-md-7 col-lg-6 col-xl-5">
                    <img class="big-logo" src="~/device_template/img/core-img/logo-white.png" alt="">
                    <!-- Register Form-->
                    <div class="register-form mt-5 px-4">
                        <form action="home.html" method="post">
                            <div class="form-group text-left mb-4">
                                <span>نام کاربری</span>
                                <label for="username"><i class="lni lni-user"></i></label>
                                <input class="form-control" id="username" type="text" placeholder="09_________" autocomplete="off">
                            </div>
                            <div class="form-group text-left mb-4">
                                <span>کلمه عبور</span>
                                <label for="password"><i class="lni lni-lock"></i></label>
                                <input class="form-control" id="password" type="password" placeholder="********************" autocomplete="off">
                            </div>
                            <button class="btn btn-success btn-lg w-100" type="submit"> ورود</button>
                        </form>
                    </div>

                </div>
            </div>
        </div>
    </div>
    <!-- All JavaScript Files-->
    <script src="~/device_template/js/jquery.min.js"></script>
    <script src="~/device_template/js/bootstrap.bundle.min.js"></script>
    <script src="~/device_template/js/waypoints.min.js"></script>
    <script src="~/device_template/js/jquery.easing.min.js"></script>
    <script src="~/device_template/js/owl.carousel.min.js"></script>
    <script src="~/device_template/js/jquery.counterup.min.js"></script>
    <script src="~/device_template/js/jquery.countdown.min.js"></script>
    <script src="~/device_template/js/default/jquery.passwordstrength.js"></script>
    <script src="~/device_template/js/wow.min.js"></script>
    <script src="~/device_template/js/jarallax.min.js"></script>
    <script src="~/device_template/js/jarallax-video.min.js"></script>
    <script src="~/device_template/js/default/dark-mode-switch.js"></script>
    <script src="~/device_template/js/default/active.js"></script>
    <script src="~/device_template/js/pwa.js"></script>

</body>
</html>