@model WebSites.Panles.Models.Authorize.UserRegisterModel
@{
    ViewData["Title"] = "AddUser";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="col-lg-12 col-md-12 col-sm-12">
    <div class="card">

        <div class="card-body">

            <form action="/Stores/Users/AddUser" method="post" data-parsley-validate="">
                <div class="row">
                    <div class="col-md-10 col-lg-8 col-xl-6 mx-auto d-block">
                        <div class="card card-body pd-20 pd-md-40 border shadow-none">
                            <h5 class="card-title mg-b-20">ثبت کاربر جدید</h5>
                            <hr class="bg-danger border-danger" />

                            <input asp-for="Storeid" type="hidden" />
                            <input asp-for="Status" type="hidden" />
                            <input name="act" id="act" value="@ViewBag.BackUrl" type="hidden" />
                            <div asp-validation-summary="All" class="text-danger"></div>
                            <div class="form-group">
                            </div>
                            <div class="form-group">
                                <label asp-for="Name" class="control-label"></label>
                                <input asp-for="Name" class="form-control" type="text" required autocomplete="off" value="" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="UserName" class="control-label"></label>
                                <input asp-for="UserName" class="form-control" type="number" required autocomplete="off" value="" />
                                <span asp-validation-for="UserName" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Password" class="control-label"></label>
                                <input asp-for="Password" class="form-control" type="password" required autocomplete="off" value="" />
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="PasswordConfirm" class="control-label"></label>
                                <input asp-for="PasswordConfirm" class="form-control" type="password" required autocomplete="off" value="" />
                                <span asp-validation-for="PasswordConfirm" class="text-danger"></span>
                            </div>
                            
                            <div class="form-group">
                                <input type="submit" value="ثبت اطلاعات" class="btn btn-danger btn-block" />
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>

        <div class="card-footer">
            <a href="/Stores/Users/Index?act=@ViewBag.BackUrl" class="btn btn-primary">برگشت</a>
        </div>

    </div>
</div>

