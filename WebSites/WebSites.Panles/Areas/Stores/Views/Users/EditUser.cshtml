@model WebSites.Panles.Models.Authorize.UserInfoModel
@{
    ViewData["Title"] = "EditUser";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

    <div class="col-lg-12 col-md-12 col-sm-12">
        <div class="card">

            <div class="card-body">
                @if (Model != null)
                {
                    <form action="/Admin/User/EditUser" method="post" data-parsley-validate="">
                        <div class="row">
                            <div class="col-md-10 col-lg-8 col-xl-6 mx-auto d-block">
                                <div class="card card-body pd-20 pd-md-40 border shadow-none">
                                    <h5 class="card-title mg-b-20">ویرایش کاربر: @Model.Name</h5>
                                    <hr class="bg-danger border-danger" />

                                    

                                    <div asp-validation-summary="All" class="text-danger"></div>
                                    <div class="form-group">
                                        <input asp-for="Id" class="form-control" type="hidden" />
                                        <input asp-for="UserName" class="form-control" type="hidden" />

                                        <input type="hidden" name="act" id="act" value="@ViewBag.BackUrl" />

                                    </div>
                                    <div class="form-group">
                                        <label asp-for="Name" class="control-label"></label>
                                        <input asp-for="Name" class="form-control" type="text" required />
                                        <span asp-validation-for="Name" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="Storeid" class="control-label"></label>
                                        <input asp-for="Storeid" class="form-control" type="number" step="0.001" min="0.000" required />
                                        <span asp-validation-for="Storeid" class="text-danger"></span>
                                    </div>
                                    <div class="form-group form-check">
                                        <label asp-for="Status" class="control-label"></label>
                                        <select asp-for="Status" name="Status" id="cmbStatus" class="form-control select2">
                                            <option value="true" data-select2-id="true">فعال</option>
                                            <option value="false" data-select2-id="false">غیرفعال</option>
                                        </select>
                                        <span asp-validation-for="Status" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <input type="submit" value="ویرایش اطلاعات" class="btn btn-danger btn-block" />
                                    </div>
                                </div>
                            </div>
                        </div>

                    </form>
                }
                else
                {
                    <p class="text-danger">موردی برای ویرایش وجود ندارد</p>
                }
            </div>

            <div class="card-footer">
                <a href="/Admin/User/Index">برگشت</a>
            </div>

        </div>
    </div>

