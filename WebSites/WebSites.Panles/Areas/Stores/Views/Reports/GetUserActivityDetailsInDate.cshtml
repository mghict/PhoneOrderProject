@model List<WebSites.Panles.Models.Order.CustomerPreOrderUserActive>

@{
    Layout = "~/Areas/Stores/Views/Shared/_Layout.cshtml";

    int rowNum = 0;
}

<div class="card ">
    <div class="card-header">
        <h5>لیست فعالیت جاری کاربر</h5>
    </div>
    <div class="card-body">
        @if (Model != null && Model.Count > 0)
        {
            <div class="table-responsive" tabindex="1" style="overflow:auto; outline: none;">
                <table class="table table-striped table-hover mg-b-0 text-md-nowrap">
                    <thead>
                        <tr>
                            <th rowspan="1" colspan="1">#</th>
                            <th rowspan="1" colspan="1">شماره سفارش</th>
                            <th rowspan="1" colspan="1">وضعیت سفارش</th>
                            <th rowspan="1" colspan="1">عملیات</th>
                        </tr>
                    </thead>

                    <tbody>

                        @foreach (var item in Model)
                        {
                            rowNum++;

                            <tr role="row">
                                <td>@rowNum</td>
                                <td>@item.OrderCode</td>
                                <td>@item.StatusDescription</td>
                                <td>
                                    <a href="/Stores/Reports/GetOrderInfoWithItems?orderCode=@item.OrderCode" class="d-inline"
                                       data-toggle="tooltip" data-placement="bottom" title="نمایش سفارش">
                                        <i class="fa fa-credit-card  text-danger" aria-hidden="true"></i>
                                    </a>
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        }
        else
        {
            <h6 class="text-danger">اطلاعات برای نمایش وجود ندارد</h6>
        }
    </div>
</div>
