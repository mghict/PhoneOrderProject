@model List<WebSites.Panles.Models.Reports.GetSummeryOrdersByDateAndStore>
@using BehsamFramework.Util
 
@{
    ViewData["Title"] = "GetSummeryOrdersByDateAndStorePost";
    Layout = null;

    var StoreId = ViewBag.StoreId.ToString(System.Globalization.CultureInfo.InvariantCulture)?? "0";
    var OrderDate = ViewBag.OrderDate ?? DateTime.Now.ToPersianDate();
}


    <div class="card ">
        <div class="card-body">
            @if (Model != null && Model.Count > 0)
            {
                <div class="table-responsive" tabindex="1" style="overflow:auto; outline: none;">
                    <table class="table table-striped table-hover mg-b-0 text-md-nowrap">
                        <thead>
                            <tr>
                                <th rowspan="1" colspan="1">شعبه</th>
                                <th rowspan="1" colspan="1">تاریخ</th>
                                <th rowspan="1" colspan="1">زمان ارسال</th>
                                <th rowspan="1" colspan="1">تعداد</th>
                                <th rowspan="1" colspan="1">عملیات</th>
                            </tr>
                        </thead>

                        <tbody>

                            @foreach (var item in Model)
                            {
                                
                            <tr role="row">
                                <td>@item.StoreName</td>
                                <td>@item.OrderDate.ToPersianDate()</td>
                                <td>@item.OrderSendTime</td>
                                <td>@item.OrderCount.ToString("#,#")</td>
                                <td>
                                    <a href="/Stores/Reports/GetDetailsOrdersByDateAndStore?storeId=@StoreId&orderDate=@OrderDate&orderTime=@item.OrderSendTime" class="d-inline"
                                       data-toggle="tooltip" data-placement="bottom" title="نمایش جزئیات">
                                        <i class="fa fa-credit-card  text-danger" aria-hidden="true"></i>
                                    </a>
                                </td>
                            </tr>
                            }

                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <h6 class="text-danger">اطلاعات برای نمایش وجود ندارد</h6>
            }
        </div>

    </div>

