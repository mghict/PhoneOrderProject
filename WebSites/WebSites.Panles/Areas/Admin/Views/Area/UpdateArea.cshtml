@model WebSites.Panles.Models.Area.AreaInfoModel

@{
    ViewData["Title"] = "ویرایش منطقه: "+Model.AreaName;
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


<div class="col-lg-12 col-md-12 col-sm-12">
    <div class="card">

        <div class="card-body">

            <form action="/Admin/Area/UpdateArea" method="post" data-parsley-validate="">
                <div class="row">
                    <div class="col-md-10 col-lg-8 col-xl-6 mx-auto d-block">
                        <div class="card card-body pd-20 pd-md-40 border shadow-none">
                            <h5 class="card-title mg-b-20">@ViewBag.Title</h5>
                            <hr class="bg-danger border-danger" />

                            <input asp-for="Id" type="hidden" />
                            <input asp-for="CenterLatitude" type="hidden" />
                            <input asp-for="Centerlongitude" type="hidden" />

                            <div asp-validation-summary="All" class="text-danger"></div>
                            <div class="form-group">
                            </div>
                            <div class="form-group">
                                <label asp-for="AreaName" class="control-label"></label>
                                <input asp-for="AreaName" class="form-control" type="text" required autocomplete="off" />
                                <span asp-validation-for="AreaName" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="AreaType" class="control-label"></label>
                                <select asp-for="AreaType" name="AreaType" id="cmbAreaType" class="form-control select2" asp-items="@ViewBag.AreaType">
                                    <option value="" data-select2-id="">انتخاب کنید</option>
                                </select>
                                <span asp-validation-for="AreaType" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="CityId" class="control-label"></label>
                                <select asp-for="CityId" name="CityId" id="cmbCityId" class="form-control select2" asp-items="@ViewBag.City">
                                    <option value="" data-select2-id="">انتخاب کنید</option>
                                </select>
                                <span asp-validation-for="CityId" class="text-danger"></span>
                            </div>

                            <div class="form-group form-check">
                                <label asp-for="Status" class="control-label"></label>
                                <select asp-for="Status" name="Status" id="cmbStatus" class="form-control select2">
                                    <option value="true" data-select2-id="true">فعال</option>
                                    <option value="false" data-select2-id="false">غیرفعال</option>
                                </select>
                                <span asp-validation-for="Status" class="text-danger"></span>
                            </div>

                            <div class="form-group form-check">
                                <label asp-for="ParentID" class="control-label"></label>
                                <select asp-for="ParentID" name="ParentID" id="cmbParentID" class="form-control select2" asp-items="@ViewBag.Parent">
                                    <option value="0" data-select2-id="0">بدون والد</option>
                                </select>
                                <span asp-validation-for="ParentID" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <input type="submit" value="ویرایش اطلاعات" class="btn btn-danger btn-block" />
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>

        <div class="card-footer">
            <a href="/Admin/Area/Index" class="btn btn-primary">برگشت</a>
        </div>

    </div>
</div>

