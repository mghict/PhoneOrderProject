@model WebSites.Panles.Models.Authorize.PageInfoModel

@{
    ViewData["Title"] = "AddPagesChild";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="col-lg-12 col-md-12 col-sm-12">
    <div class="card">

        <div class="card-body">
            @if (Model != null)
            {
                <form action="/Admin/Application/AddPagesChild" method="post" data-parsley-validate="">
                    <div class="row">
                        <div class="col-md-10 col-lg-8 col-xl-6 mx-auto d-block">
                            <div class="card card-body pd-20 pd-md-40 border shadow-none">
                                <h5 class="card-title mg-b-20">ثبت صفحه جدید: @ViewBag.AppName</h5>
                                <hr class="bg-danger border-danger" />

                                <div asp-validation-summary="All" class="text-danger"></div>
                                <div class="form-group">
                                    <input asp-for="ApplicationId" class="form-control" type="hidden" />
                                    <input asp-for="ParentId" class="form-control" type="hidden" />
                                </div>
                                <div class="form-group">
                                    <label asp-for="DisplayName" class="control-label"></label>
                                    <input asp-for="DisplayName" class="form-control" type="text" required />
                                    <span asp-validation-for="DisplayName" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="PageName" class="control-label"></label>
                                    <input asp-for="PageName" class="form-control" type="text" required />
                                    <span asp-validation-for="PageName" class="text-danger"></span>
                                </div>
                                <div class="form-group form-check">
                                    <label asp-for="Status" class="control-label"></label>
                                    <select asp-for="Status" name="Status" id="cmbStatus" class="form-control select2">
                                        <option value="true" data-select2-id="true">فعال</option>
                                        <option value="false" data-select2-id="false">غیرفعال</option>
                                    </select>
                                    <span asp-validation-for="Status" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <input type="submit" value="ثبت اطلاعات" class="btn btn-danger btn-block" />
                                </div>
                            </div>
                        </div>
                    </div>

                </form>
            }
            else
            {
                <p class="text-danger">امکان عملیات وجود ندارد</p>
            }
        </div>

        <div class="card-footer">
            <a href="/Admin/Application/AppPagesChild?pageId=@ViewBag.PageId" class="btn btn-primary">برگشت</a>
        </div>

    </div>
</div>


