@model WebSites.Panles.Models.Store.StoreShippingTbl
@using System.Globalization
@{
    ViewData["Title"] = "ثبت کرایه ثابت";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

    <div class="col-lg-12 col-md-12 col-sm-12">
        <div class="card">

            <div class="card-body">
                
                <form action="/Admin/StoreShipping/StoreShipping" method="post" data-parsley-validate="">
                    <div class="row">
                        <div class="col-md-10 col-lg-8 col-xl-6 mx-auto d-block">
                            <div class="card card-body pd-20 pd-md-40 border shadow-none">
                                @if (Model.Id == 0)
                                {
                                    <h6 class="text-danger">اطلاعات وجود ندارد، می بایست اطلاعات را ثبت نمایید</h6>
                                }
                                <hr class="bg-danger border-danger" />

                                <input  asp-for="Id" name="id" type="hidden" />
                                <input  asp-for="StoreID" name="StoreID" type="hidden" />
                                <input name="storeIdStr" value="@ViewBag.StoreId" type="hidden" />
                                <div asp-validation-summary="All" class="text-danger"></div>
                                <div class="form-group">
                                </div>
                                <div class="form-group">
                                    <label class="control-label">کرایه حمل</label>
                                    <input asp-for="ShippingPrice" name="ShippingPrice" class="form-control" type="number" min="1000" step="100" required autocomplete="off" />
                                    
                                </div>

                                <div class="form-group form-check">
                                    <label  class="control-label">وضعیت</label>
                                    <select asp-for="Status" name="Status" id="cmbStatus" class="form-control select2">
                                        <option value="true" data-select2-id="true">فعال</option>
                                        <option value="false" data-select2-id="false">غیرفعال</option>
                                    </select>
                                    
                                </div>

                                <div class="form-group">
                                    @if (Model.Id == 0)
                                    {
                                        <input type="submit" value=" ثبت اطلاعات " class="btn btn-danger btn-block" />
                                    }
                                    else
                                    {
                                        <input type="submit" value="ویرایش اطلاعات" class="btn btn-danger btn-block" />
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>

            <div class="card-footer">
                <a href="/Admin/Store/Index" class="btn btn-outline-primary btn-rounded"> برگشت </a>
            </div>

        </div>
    </div>

