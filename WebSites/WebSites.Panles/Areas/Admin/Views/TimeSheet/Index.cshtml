
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@model List<WebSites.Panles.Models.TimeSheet.StoreTimeSheetTbl>

<div class="card ">
    <div class="card-body">
        <h6 class="card-title ">
            @*<span class="fa fa-tab"></span>*@
            زمانبندی کلی فروشگاهها
        </h6>

        <br />
        <div class="table-responsive" tabindex="1" style="overflow:auto; outline: none;">
            <table class="table table-striped table-hover mg-b-0 text-md-nowrap">
                <thead>
                    <tr>
                        <th rowspan="1" colspan="1">توضیحات</th>
                        <th rowspan="1" colspan="1">ساعت شروع به کار</th>
                        <th rowspan="1" colspan="1">ساعت خاتمه کار</th>
                        <th rowspan="1" colspan="1">بازه زمانی ارسال</th>
                        <th rowspan="1" colspan="1">وضعیت</th>
                        <th rowspan="1" colspan="1">عملیات</th>
                    </tr>
                </thead>

                <tbody>
                    @if (Model != null && Model.Count > 0)
                    {
                        @foreach (var time in Model)
                        {
                            <tr role="row">
                                <td>@time.Name</td>
                                <td>@time.StartTime</td>
                                <td>@time.ToTime</td>
                                <td>@time.StepTime</td>
                                <td>
                                    @if (time.Status)
                                    {
                                        <span>فعال</span>
                                    }
                                    else
                                    {
                                        <span>غیرفعال</span>
                                    }
                                </td>
                                <td>
                                    <a href="/Admin/TimeSheet/Update?Id=@time.Id" class="d-inline"
                                       data-toggle="tooltip" data-placement="bottom" title="ویرایش زمانبندی">
                                        <i class="fa fa-credit-card  text-danger" aria-hidden="true"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>

    </div>
</div>

