
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


@model List<WebSites.Panles.Models.InActive.InActiveTbl>

<div class="card ">
    <div class="card-body">
        <h6 class="card-title ">
            تعطیلی کلی فروشگاهها
        </h6>

        <br />
        <p>
            <a class="btn btn-danger btn-rounded" href="/Admin/InActive/Register">  ایجاد تعطیلی  </a>
        </p>
        @if (Model != null && Model.Count > 0)
        {
            <div class="table-responsive" tabindex="1" style="overflow:auto; outline: none;">
                <table class="table table-striped table-hover mg-b-0 text-md-nowrap">
                    <thead>
                        <tr>
                            <th rowspan="1" colspan="1">توضیحات</th>
                            <th rowspan="1" colspan="1">تاریخ شروع تعطیلی</th>
                            <th rowspan="1" colspan="1">تاریخ خاتمه تعطیلی</th>
                            <th rowspan="1" colspan="1">وضعیت</th>
                            <th rowspan="1" colspan="1">عملیات</th>
                        </tr>
                    </thead>

                    <tbody>

                        @foreach (var date in Model)
                        {
                            <tr role="row">
                                <td>@date.Title</td>
                                <td>@date.FromDate.ToPersianDate()</td>
                                <td>@date.ToDate.ToPersianDate()</td>
                                <td>
                                    @if (date.Status)
                                    {
                                        <span>فعال</span>
                                    }
                                    else
                                    {
                                        <span>غیرفعال</span>
                                    }
                                </td>
                                <td>
                                    <a href="/Admin/InActive/Update?Id=@date.Id" class="d-inline"
                                       data-toggle="tooltip" data-placement="bottom" title="ویرایش">
                                        <i class="fa fa-credit-card  text-danger" aria-hidden="true"></i>
                                    </a>
                                    <a href="#" onclick="DeleteInActiveIndex('@date.Id')" class="d-inline"
                                       data-toggle="tooltip" data-placement="bottom" title="حذف">
                                        <i class="fa fa-times  text-danger" aria-hidden="true"></i>
                                    </a>
                                </td>
                            </tr>

                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div>
                <p class="text-danger">اطلاعات برای نمایش وجود ندارد</p>
            </div>
        }
    </div>
</div>

@section Scripts
{
    <script src="~/js/Admin/inactiveindex.js"></script>
}