@model WebSites.Panles.Models.InActive.StoreInActiveModel
@{
    ViewData["Title"] = "StoreInActiveAdd";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="col-lg-12 col-md-12 col-sm-12">
    <div class="card">

        <div class="card-body">

            <form action="/Admin/InActive/StoreInActiveAdd" method="post" data-parsley-validate="">
                <div class="row">
                    <div class="col-md-10 col-lg-8 col-xl-6 mx-auto d-block">
                        <div class="card card-body pd-20 pd-md-40 border shadow-none">
                            <h5 class="card-title mg-b-20">افزودن تعطیلی شعبه</h5>
                            <hr class="bg-danger border-danger" />

                            <div asp-validation-summary="All" class="text-danger"></div>
                            
                            <input type="hidden" asp-for="StoreId" name="StoreId" />

                            <div class="form-group">
                                <label asp-for="Title" class="control-label"></label>
                                <input asp-for="Title" class="form-control" type="text" required />
                                <span asp-validation-for="Title" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="FromDate" class="control-label"></label>
                                <div class="input-group-prepend">
                                    <div class="input-group-text">
                                        <i class="typcn typcn-calendar-outline tx-24 lh--9 op-6"></i>
                                    </div>
                                    <input asp-for="FromDate" class="form-control fc-datepicker" placeholder="ماه / روز / سال" type="text"
                                       value="@Model?.FromDate"    required>
                                </div>

                                <span asp-validation-for="FromDate" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="ToDate" class="control-label"></label>
                                <div class="input-group-prepend">
                                    <div class="input-group-text">
                                        <i class="typcn typcn-calendar-outline tx-24 lh--9 op-6"></i>
                                    </div>
                                    <input asp-for="ToDate" class="form-control fc-datepicker" placeholder="ماه / روز / سال" type="text"
                                        value="@Model?.ToDate"    required>
                                </div>

                                <span asp-validation-for="ToDate" class="text-danger"></span>
                            </div>
                            <div class="form-group form-check">
                                <label asp-for="Status" class="control-label"></label>
                                <select asp-for="Status" name="Status" id="cmbStatus" class="form-control select2">
                                    <option value="true" data-select2-id="true">فعال</option>
                                    <option value="false" data-select2-id="false">غیرفعال</option>
                                </select>
                                <span asp-validation-for="Status" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input type="submit" value="افزودن اطلاعات" class="btn btn-danger btn-block" />
                            </div>
                        </div>
                    </div>
                </div>

            </form>

        </div>

        <div class="card-footer">
            <a href="/Admin/InActive/StoreInActive?storeId=@ViewBag.StoreId">برگشت</a>
        </div>

    </div>
</div>

