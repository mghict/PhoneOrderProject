@model WebSites.Panles.Models.Authorize.RoleInfoModel
@{
    ViewData["Title"] = "AddRole";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

    <div class="col-lg-12 col-md-12 col-sm-12">
        <div class="card">

            <div class="card-body">
                @if (Model != null)
                {
                    <form action="/Admin/Application/AddRole" method="post" data-parsley-validate="">
                        <div class="row">
                            <div class="col-md-10 col-lg-8 col-xl-6 mx-auto d-block">
                                <div class="card card-body pd-20 pd-md-40 border shadow-none">
                                    <h5 class="card-title mg-b-20">ثبت نقش جدید: @ViewBag.AppName</h5>
                                    <hr class="bg-danger border-danger" />

                                    <div asp-validation-summary="All" class="text-danger"></div>
                                    <div class="form-group">
                                        <input asp-for="ApplicationId" class="form-control" type="hidden" />
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="RoleName" class="control-label"></label>
                                        <input asp-for="RoleName" class="form-control" type="text" required />
                                        <span asp-validation-for="RoleName" class="text-danger"></span>
                                    </div>
                                    <div class="form-group form-check">
                                        <label asp-for="Status" class="control-label"></label>
                                        <select asp-for="Status" name="Status" id="cmbStatus" class="form-control select2">
                                            <option value="true" data-select2-id="true">فعال</option>
                                            <option value="false" data-select2-id="false">غیرفعال</option>
                                        </select>
                                        <span asp-validation-for="Status" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <input type="submit" value="ثبت اطلاعات" class="btn btn-danger btn-block" />
                                    </div>
                                </div>
                            </div>
                        </div>

                    </form>
                }
                else
                {
                    <p class="text-danger">امکان عملیات وجود ندارد</p>
                }
            </div>

            <div class="card-footer">
                <a href="/Admin/Role/AppRoles?appId=@ViewBag.AppId" class="btn btn-primary">برگشت</a>
            </div>

        </div>
    </div>

