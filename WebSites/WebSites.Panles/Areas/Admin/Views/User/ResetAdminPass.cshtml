@model WebSites.Panles.Models.Authorize.UserInfoModel
@{
    ViewData["Title"] = "EditUser";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

    <div class="col-lg-12 col-md-12 col-sm-12">
        <div class="card">

            <div class="card-body">
                @if (Model != null)
                {
                    <form action="/Admin/User/ResetAdminPass" method="post" data-parsley-validate="">
                        <div class="row">
                            <div class="col-md-10 col-lg-8 col-xl-6 mx-auto d-block">
                                <div class="card card-body pd-20 pd-md-40 border shadow-none">
                                    <h5 class="card-title mg-b-20">تغییر رمزعبور: @Model.Name</h5>
                                    <hr class="bg-danger border-danger" />

                                    <div asp-validation-summary="All" class="text-danger"></div>
                                    <div class="form-group">
                                        <input asp-for="Id" class="form-control" type="hidden" />
                                        <input asp-for="UserName" class="form-control" type="hidden" />
                                        <input asp-for="Name" class="form-control" type="hidden" />
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="Password" class="control-label"></label>
                                        <input asp-for="Password" class="form-control" type="password" required />
                                        <span asp-validation-for="Password" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="PasswordConfirm" class="control-label"></label>
                                        <input asp-for="PasswordConfirm" class="form-control" type="password" required />
                                        <span asp-validation-for="PasswordConfirm" class="text-danger"></span>
                                    </div>
                                    
                                    <div class="form-group">
                                        <input type="submit" value="تغییر رمزعبور" class="btn btn-danger btn-block" />
                                    </div>
                                </div>
                            </div>
                        </div>

                    </form>
                }
                else
                {
                    <p class="text-danger">موردی برای ویرایش وجود ندارد</p>
                }
            </div>

            <div class="card-footer">
                <a href="/Admin/User/Index">برگشت</a>
            </div>

        </div>
    </div>

