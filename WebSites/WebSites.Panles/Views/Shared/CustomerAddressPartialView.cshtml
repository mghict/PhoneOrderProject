@model List<WebSites.Panles.Models.CustomerAddress.CustomerAddressModel>
@{
    Layout = null;
}


<div class="card ">
    <div class="card-body">
        <h6 class="card-title ">
            <span class="fa fa-users"></span>
            لیست آدرسهای مشتری
        </h6>

        <br />
        <p>
            <a class="btn btn-danger btn-rounded" href="/CallCenter/CustomerAddress/Insert?customerId=@ViewBag.CustomerId">  ایجاد آدرس جدید  </a>
        </p>
        <hr />
        <div class="table-responsive" tabindex="1" style="overflow:auto; outline: none;">
            <table class="table table-striped table-hover mg-b-0 text-md-nowrap">
                <thead>
                    <tr>
                        <th rowspan="1" colspan="1">نوع آدرس</th>
                        <th rowspan="1" colspan="1">منطقه آدرس</th>
                        <th rowspan="1" colspan="1">وضعیت</th>
                        <th rowspan="1" colspan="1">آدرس</th>
                        <th rowspan="1" colspan="1">عملیات</th>
                    </tr>
                </thead>

                <tbody>
                    @if (Model != null && Model.Count > 0)
                    {
                        @foreach (var item in Model)
                        {
                            <tr role="row">
                                <td>@item.AddressTypeStr</td>
                                <td>@item.AreaName</td>
                                <td>@item.StatusStr</td>
                                <td>@item.AddressValue.Substring(0, 50)</td>
                                <td>
                                    <a href="/CallCenter/CustomerAddress/Update?addressId=@item.Id" class="d-inline"
                                       data-toggle="tooltip" data-placement="bottom" title="ویرایش">
                                        <i class="fa fa-credit-card  text-danger" aria-hidden="true"></i>
                                    </a>
                                    <a href="#" onclick="Delete('@item.Id');" class="d-inline"
                                       data-toggle="tooltip" data-placement="bottom" title="حذف">
                                        <i class="fa fa-times  text-danger" aria-hidden="true"></i>
                                    </a>

                                </td>
                            </tr>
                        }
                    }
                </tbody>

                <tfoot>
                    <tr>
                        <th rowspan="1" colspan="1">نوع آدرس</th>
                        <th rowspan="1" colspan="1">منطقه آدرس</th>
                        <th rowspan="1" colspan="1">وضعیت</th>
                        <th rowspan="1" colspan="1">آدرس</th>
                        <th rowspan="1" colspan="1">عملیات</th>
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>
</div>

<script src="~/js/PartialViews/CustomerAddressPartialView.js"></script>

